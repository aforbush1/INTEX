<body>
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <a href="/adminIndex/<%=id%>"><img src="https://aforbush1.github.io/INTEX/views/assets/img/provoLogo.png" alt="" class="img-fluid">
                </a>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="" href="/adminIndex/<%=id%>">Home</a></li>
                    <li><a href="/createUser/<%=id%>">Create User</a></li>
                    <li><a href="/viewUser/<%=id%>">View Users</a></li>
                    <li><a href="/viewData/<%=id%>">View Data</a></li>
                    <li><a href="/">Log Out</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
            <!-- .navbar -->

        </div>
    </header>

  <div class="form-container">
    <form class='user-form' action="/editUsers/<%=id%>" method="POST">
      <fieldset>
        <legend>Edit Users:</legend>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="<%= theLogin[0].firstName %>">
        <br><br>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="<%= theLogin[0].lastName %>">
        <br><br>
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="<%= theLogin[0].email %>">
        <br><br>
        <label for="username">UserName:</label>
        <input type="text" id="username" name="username" value="<%= theLogin[0].username %>">
        <br><br>
        <label for="password">Password:</label>
        <input type="text" id="password" name="password" value="<%= theLogin[0].password %>">
        <br><br>
        <input type="hidden" id="id" name="id" value="<%= theLogin[0].id %>">
      </fieldset>
      <div class="form-group">
        <button type="submit">Save</button>
      </div>
    </form>
  </div>
