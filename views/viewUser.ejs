<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Profile</title>

    <!-- Favicons -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/img/provoIcon.ico" rel="icon">
    <link href="https://aforbush1.github.io/INTEX/views/assets/img/provoIcon.ico" rel="provo-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Select2 Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- Template Main CSS File -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/css/style.css" rel="stylesheet">

    <style>
        /* Styles for the navigation bar */
        header {
            background-color: rgba(211, 211, 211, 0.7);
            padding: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        header .logo img {
            max-width: 150px;
        }

        header nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        header nav ul li {
            margin-right: 20px;
        }

        header nav ul li a {
            color: #000;
            text-decoration: none;
        }

        header nav ul li a:hover {
            text-decoration: underline;
        }

        /* Table styles */
        body {
            background-image: url('https://aforbush1.github.io/INTEX/views/assets/img/cascadeAtNight.jpg');
            background-size: cover;
            color: white;
            font-family: 'Roboto', sans-serif;
            padding: 20px;
        }

        label {
            font-size: 20px;
        }

        table {
            width: 100%;
            background-color: #454545;
            border: 1px solid #666;
            border-collapse: collapse;
            margin-top: 15px;
        }

        thead th {
            background-color: #222;
            color: white;
            padding: 8px;
            text-align: left;
        }

        th,
        td {
            padding: 8px;
            border-bottom: 1px solid #666;
        }

        tr:nth-child(even) {
            background-color: #333;
        }

        /* Button styles */
        .button-container {
            display: flex;
            justify-content: center;
        }

        .button-container button {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .edit-button {
            color: white;
            background: none;
            border: 2px solid white;
            transition: background-color 0.4s, color 0.4s;
        }

        .delete-button {
            color: #ab1919;
            background: none;
            border: 2px solid #ab1919;
            transition: background-color 0.4s, color 0.4s;
        }

        .button-container button:hover {
            color: #fff;
        }

        .edit-button:hover {
            background-color: #274685;
        }

        .delete-button:hover {
            background-color: #ab1919;
            color: #fff;
        }
    </style>
</head>

<body>
    <!-- Header with navigation -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <a href="/adminIndex/<%=id%>"><img src="https://aforbush1.github.io/INTEX/views/assets/img/provoLogo.png" alt="" class="img-fluid"></a>
            </div>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="" href="/adminIndex/<%=id%>">Home</a></li>
                    <li><a href="/createUser/<%=id%>">Create User</a></li>
                    <li><a href="/viewUser/<%=id%>">View Users</a></li>
                    <li><a href="/viewData/<%=id%>">View Data</a></li>
                    <li><a href="/">Log Out</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header>

    <!-- Table section -->
    <label style="margin-top: 100px;"><b>User Information:</b></label>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>Edit Data Button</th>
                <th>Delete Data Button</th>
            </tr>
        </thead>
        <tbody style="font-family: Arial; font-size: 9pt;">
            <% for (let iCount = 0; iCount < theLogin.length; iCount++) { %>
                <tr>
                    <td><%= theLogin[iCount].firstName %></td>
                    <td><%= theLogin[iCount].lastName %></td>
                    <td><%= theLogin[iCount].email %></td>
                    <td><%= theLogin[iCount].username %></td>
                    <td><%= theLogin[iCount].password %></td>
                    <td style="text-align: center;">
                        <div style="margin-top: 10px;">
                            <button type="button" onclick="window.location.href='/editUsers/<%= theLogin[iCount].id %>'"
                                class="edit-button">
                                Edit
                            </button>
                        </div>
                    </td>
                    <td style="text-align: center;">
                        <div style="margin-top: 10px;">
                            <form action="/deleteUser/<%= theLogin[iCount].id %>" method="POST">
                                <div class="button-container">
                                    <button class="delete-button" type="submit" style="color: #ab1919;">Delete</button>
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <br><br>
</body>

</html>
