    <style>
        body {
            background-color: #586a9a;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        header {
            color: #fff;
            padding: 10px;
            text-align: center;
            width: 100%;
            position: fixed;
            top: 0;
            z-index: 1000;
        }
        
        form {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }
        
        input,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        
        button {
            background-color: #6a9c59;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>

    <!-- Template Main CSS File -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex justify-content-between align-items-center">

            <div class="logo">
                <!--<h1><a href="index.html">SoftLand</a></h1>-->
                <!-- Uncomment below if you prefer to use an image logo -->
                <a href="/"><img src="https://aforbush1.github.io/INTEX/views/assets/img/provoLogo.png" alt="" class="img-fluid">
                </a>
            </div>

            <!-- .navbar -->
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="active" href="/">Home</a></li>
                    <li><a href="/surveyForm">Survey</a></li>
                    <li><a href="/login">Log In</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

        </div>
    </header>
    <!-- End Header -->
    <br><br><br>

    <form action="/submitSurvey" method="post">
        <label for="age">Age</label>
        <input type="number" id="age" name="age" required>

        <label for="gender">Gender</label>
        <select id="gender" name="gender" required>
            <option value=""> </option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>

        <label for="relationshipStatus">Relationship Status</label>
        <select id="relationshipStatus" name="relationshipStatus" required>
            <option value="single">Single</option>
            <option value="inarelationship">In a Relationship</option>
            <option value="married">Married</option>
            <option value="divorced">Divorced</option>
            <option value="other">Other</option>
        </select>

        <label for="occupationStatus">Occupation Status</label>
        <select id="occupationStatus" name="occupationStatus" required>
            <option value="employed">Employed</option>
            <option value="unemployed">Unemployed</option>
            <option value="student">Student</option>
            <option value="other">Other</option>
        </select>

        <label for="affiliatedOrganizations">What type of organizations are you affiliated with?</label>
        <input type="text" id="affiliatedOrganizations" name="affiliatedOrganizations" required>

        <label for="useSocialMedia">Do you use social media?</label>
        <select id="useSocialMedia" name="useSocialMedia" required>
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </select>

        <label for="socialMedia">What social media platforms do you commonly use?</label>
        <select id="socialMedia" name="socialMedia[]" multiple required>
            <option value="Facebook">Facebook</option>
            <option value="Twitter">Twitter</option>
            <option value="Instagram">Instagram</option>
            <option value="Youtube">Youtube</option>
            <option value="Discord">Discord</option>
            <option value="Reddit">Reddit</option>
            <option value="Pinterest">Pinterest</option>
            <option value="Tiktok">Tik Tok</option>
            <option value="Snapchat">Snapchat</option>
            <option value="Other">Other</option>
        </select>

        <label for="averageTimeOnSocialMedia">What is the average time you spend on social media every day?</label>
        <select id="averageTimeOnSocialMedia" name="averageTimeOnSocialMedia" required>
            <option value="lessthananhour">Less than an Hour</option>
            <option value="between1and2hours">Between 1and 2hours</option>
            <option value="between2and3hours">Between 2and 3hours</option>
            <option value="between3and4hours">Between 3and 4hours</option>
            <option value="between4and5hours">Between 4and 5hours</option>
            <option value="morethan5hours">More than 5hours</option>
        </select>

        <label for="socialMediaWithoutPurpose">How often do you find yourself using social media without a specific purpose?</label>
        <select id="socialMediaWithoutPurpose" name="socialMediaWithoutPurpose" required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="distractedBySocialMedia">How often do you get distracted by social media when you are busy doing something?</label>
        <select id="distractedBySocialMedia" name="distractedBySocialMedia" required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="restlessWithoutSocialMedia">Do you feel restless if you havenâ€™t used social media in a while?</label>
        <select id="restlessWithoutSocialMedia
        <select id=" restlessWithoutSocialMedia " name="restlessWithoutSocialMedia " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="easilyDistracted ">How easily distracted are you?</label>
        <select id="easilyDistracted " name="easilyDistracted " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="botheredByWorries ">How much are you bothered by worries?</label>
        <select id="botheredByWorries " name="botheredByWorries " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="difficultToConcentrate ">Do you find it difficult to concentrate on things?</label>
        <select id="difficultToConcentrate " name="difficultToConcentrate " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="compareToOthersOnSocialMedia ">How often do you compare yourself to other successful people through the use of social media?</label>
        <select id="compareToOthersOnSocialMedia " name="compareToOthersOnSocialMedia " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="feelingsAboutComparisons ">Following the previous question, how do you feel about these comparisons, generally speaking?</label>
        <select id="compareToOthersOnSocialMedia " name="compareToOthersOnSocialMedia " required>
            <option value="1">Strongly Disagree</option>
            <option value="2">Disagree</option>
            <option value="3">Undecided</option>
            <option value="4">Agree</option>
            <option value="5">Strongly Agree</option>
        </select>

        <label for="seekValidationOnSocialMedia ">How often do you look to seek validation from features of social media?</label>
        <select id="seekValidationOnSocialMedia " name="seekValidationOnSocialMedia " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="feelingsOfDepression ">How often do you feel depressed or down?</label>
        <select id="feelingsOfDepression " name="feelingsOfDepression " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="fluctuationInInterest ">How frequently does your interest in daily activities fluctuate?</label>
        <select id="fluctuationInInterest " name="fluctuationInInterest " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <label for="sleepIssues ">How often do you face issues regarding sleep?</label>
        <select id="sleepIssues " name="sleepIssues " required>
            <option value="1">Never</option>
            <option value="2">Rarely</option>
            <option value="3">Occasionally</option>
            <option value="4">Frequently</option>
            <option value="5">Always</option>
        </select>

        <button type="submit ">Submit</button>
    </form>
