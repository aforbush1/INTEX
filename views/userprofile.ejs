<!DOCTYPE html>
<html lang="en">

<head style="background-image: url('https://aforbush1.github.io/INTEX/views/assets/img/cascadeAtNight.jpg');background-size: cover;">
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Welcome Home</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/img/provoIcon.ico" rel="icon">
    <link href="https://aforbush1.github.io/INTEX/views/assets/img/provoIcon.ico" rel="provo-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="https://aforbush1.github.io/INTEX/views/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="https://aforbush1.github.io/INTEX/views/assets/css/style.css" rel="stylesheet">

    <style>
        /* Header and Navigation Styles */
        header {
            background-color: rgba(211, 211, 211, 0.7);
            color: white;
            padding: 20px 0;
        }

        header .container {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header .logo img {
            max-width: 150px;
        }

        
        /* Table Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        label {
            font-size: 20px;
            margin: 20px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            background-color: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        thead {
            background-color: #333;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* Records Styles */
        tbody td {
            font-size: 14px;
        }

        /* Button Styles */
        .button-container {
            display: flex;
            justify-content: center;
        }

        button {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
            color: #fff;
            background-color: #6a9c59;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #4b7847;
        }
    </style>
</head>

<body>
    <!-- Header with navigation -->
    <header id="header">
        <div class="container">
            <div class="logo">
                <a href="/userIndex/<%= id %>">
                    <img src="https://aforbush1.github.io/INTEX/views/assets/img/provoLogo.png" alt="" class="img-fluid">
                </a>
            </div>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a  href="/userIndex/<%= id %>">Home</a></li>
                    <li><a class="active "href="/userprofile/<%= id %>">View Profile</a></li>
                    <li><a href="/viewUserData/<%= id %>">View Data</a></li>
                    <li><a href="/">Log Out</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header>

    <!-- Table section -->
    <div class="container">
        <label><b>User Information:</b></label>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% if (theLogin) { %>
                    <tr>
                        <td><%= theLogin.firstName %></td>
                        <td><%= theLogin.lastName %></td>
                        <td><%= theLogin.email %></td>
                        <td><%= theLogin.username %></td>
                        <td><%= theLogin.password %></td>
                    </tr>
                <% } else { %>
                    <tr>
                        <td colspan="5">User not found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Vendor JS Files -->
    <script src="https://aforbush1.github.io/INTEX/views/assets/vendor/aos/aos.js"></script>
    <script src="https://aforbush1.github.io/INTEX/views/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://aforbush1.github.io/INTEX/views/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="https://aforbush1.github.io/INTEX/views/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="https://aforbush1.github.io/INTEX/views/assets/js/main.js"></script>
</body>

</html>
